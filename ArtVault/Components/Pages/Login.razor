@page "/login"
@inject NavigationManager NavManager
@inject IArtVaultFacade IAVFacade;
<style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
    }

    .login-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column; /* Align children vertically */
        justify-content: center;
        align-items: center;
        width: 25vw; 

        position: relative;
        top: 50%;
        left: 50%;
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, 40%);

    }

    .login-container label {
      display: block;
      margin-bottom: 8px;
    }

    .login-container input {
      width: 100%;
      padding: 8px;
      margin-bottom: 16px;
      box-sizing: border-box;
    }

    .login-container button {
            background-color: #305673;
      color: #fff;
      padding: 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
      margin: 0 auto;
      /*
      position: relative;
      top: 50%;
      left: 50%;
      -ms-transform: translate(-50%, -50%);
      transform: translate(-50%, 0%);
      */
    }

    .login-container button:hover {
                background-color: #25445c;
    }

  </style>

<div class="login-container">
  <h2>Iniciar Sessão</h2>
  <form>
    <label for="username">Email:</label>
    <input type="text" id="username" name="username" required>

    <label for="password">Palavra-passe:</label>
    <input type="password" id="password" name="password" required>
        <button type="submit" style="transform: translate(10%, 0%);">Iniciar Sessão</button>
        <button type="submit" style="transform: translate(150%, 0%);">Registar</button>
  </form>
</div>

@code {
    @using Business
    private string Username { get; set; }
    private string Password { get; set; }


    public Login()
    {
    }

    private async Task SubmitForm()
    {

    bool isValid = await IAVFacade.CheckCredentials(Username, Password);

    if (isValid)
    {
        // Redirect to a success page or perform other actions
            NavManager.NavigateTo("/");
    }
    else
    {
        // Handle invalid credentials, show an error message, etc.
        Console.WriteLine("Invalid credentials!");
    }
    }
}