@page "/admin"
@using ArtVault.Business.Utilizadores
@using ArtVault.Components.Layout
@inject NavigationManager NavManager
@inject IArtVaultFacade IAVFacade

<style>
    .vendedores-grid-container {
        width: 1000px;
        display: grid;
        grid-template-columns: repeat(auto-fill, 300px);
        column-gap: 220px;
        row-gap: 20px;
    }

    .redirect-container {
        text-align: center;
        padding: 20px;
    }

    .loading-spinner {
        border: 4px solid rgba(0, 0, 0, 0.1);
        border-radius: 50%;
        border-top: 4px solid #3498db;
        width: 30px;
        height: 30px;
        animation: spin 1s linear infinite;
        margin: 0 auto;
    }
</style>


<PageTitle>Admin</PageTitle>


<div class="vendedores-grid-container">
    @foreach(Artista a in IAVFacade.GetUsersPorValidar())
    {
        <UserComponent ArtistaInstance=a/>
    }
</div>

@code {
    @using Business
}
